<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		d:DesignWidth="800"
		d:DesignHeight="450"
        x:Class="Playground.Views.MessageBox" 
		SizeToContent="WidthAndHeight" 
		CanResize="False">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Orientation="Horizontal" Margin="24">
			<Image Name="AlertIcon" IsVisible="False" Grid.Column="0" Width="32" Height="32"/>
			<TextBlock Name="Text" Margin="8" FontSize="14" IsVisible="True" Grid.Column="1"/>
		</StackPanel>
		
		<Image Name="DialogImage" Margin="8" IsVisible="False"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Name="Buttons" Margin="32,0,32,0">
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Margin" Value="8"/>
                </Style>
            </StackPanel.Styles>

        </StackPanel>
    </StackPanel>
</Window>
